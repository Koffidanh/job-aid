<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form id="job-form">
                <div class="container">
                    <h1>Job Form</h1>
                    <p>Please fill out the following job details</p>
                    <div class="col-md-6" style="float:left">

                        <label for="startDate"><b>Start Date </b></label>
                        <input type='text' id="startDate" class="form-control" data-provide="datepicker"
                            placeholder='Select Date' style='width: 300px;' autocomplete="off">
                        <br>
                        <label for="streetAddress"><b>Street Address</b></label>
                        <input type="text" name="jobStreetAddress" class="form-control" id="jobStreetAddress">

                        <label for="streetAddressL2"><b>Street Address Line 2</b></label>
                        <input type="text" name="jobStreetAddressL2" class="form-control" id="jobStreetAddressL2">

                        <label for="city"><b>City</b></label>
                        <input type="text" name="jobCity" class="form-control" id="jobCity">

                        <label for="state"><b>State</b></label>
                        <input type="text" name="jobState" class="form-control" id="jobState">

                        <label for="zipCode"><b>Zip Code</b></label>
                        <input type="text" name="jobZipCode" class="form-control" id="jobZipCode">
                    </div>
                    <div class="jobDetails">
                        <div class="col-md-6" style="float:right">

                            <label for="phase"><b>Phase:</b></label>
                            <select id="phase" name="phase">
                                <option value="Bid">Bid</option>
                                <option value="Work Order">Work Order</option>
                            </select>
                            {{!-- <br>
                            <label for="status"><b>Status:</b></label>
                            <select id="status" name="status">
                                <option value="Active">Active</option>
                                <option value="Cancelled">Cancelled</option>
                                <option value="Completed">Completed</option>
                            </select> --}}
                            <br>
                            <label for="typeOfWork"><b>Type Of Work:</b></label>
                            <select id="typeOfWork" name="typeOfWork">
                                <option value="retrofit">Retrofit</option>
                                <option value="newconstruction">New Construction</option>
                                <option value="repair">Repair</option>
                            </select>
                            <br>
                            <label for="sourceOfWork"><b>Source of Work:</b></label>
                            <select id="sourceOfWork" name="sourceOfWork">
                                <option value="retrofit">Internet</option>
                                <option value="newconstruction">Referral</option>
                                <option value="repair">Other</option>
                            </select>
                        </div>
                        <hr>
                        <button type="submit" class="registerbtn">Create
                            Job</button>
                    </div>
            </form>
            <a href="/customer"><button type="button" class="backButton">Back</button></a>

        </div>

    </div>
