<div class="container">
  <div class="row">
    <div class="col-md-6">
      <form id="customer-form">
        <a href="/viewAll"><button type="button" class="backButton">View All</button></a>
        <div class="container">
          <h1>Customer Details</h1>
          <p>Please fill in this form to create / search for an account.</p>

          <label for="newCustomer"><b>New</b></label>
          <input type="radio" name="customerType" id="newCustomer" style="margin-right: 12px;">

          <label for="existingCustomer"><b>Existing</b></label>
          <input type="radio" name="customerType" id="existingCustomer">

          <section id="newCustomerForm">
            <br>
            <label for="cars">Choose Residential or Commercial:</label>
            <select name="residentialCommercial" id="residentialCommercial">
              <br>
              <option value="residential">Residential</option>
              <option value="commercial">Commercial</option>

            </select>
            <!-- <label for="residential"><b>Residential</b></label>
              <input type="radio" name="jobType" id="residential" style="margin-right: 12px;">

              <label for="commercial"><b>Commercial</b></label>
              <input type="radio" name="jobType" id="commercial"> -->
            <br>
            <label for="companyName"><b>Company Name</b></label>
            <input type="text" name="companyName" class="form-control" id="companyName">

            <label for="firstName"><b>First Name</b></label>
            <input type="text" name="firstName" class="form-control" id="firstName">

            <label for="lastName"><b>Last Name</b></label>
            <input type="text" name="lastName" class="form-control" id="lastName">

            <label for="position/department"><b>Position or Department</b></label>
            <input type="text" name="position/department" class="form-control" id="positionDepartment">

            <label for="phone"><b>Phone Number</b></label>
            <input type="text" name="phone" id="phoneNumber" class="form-control">

            <label for="email"><b>Email</b></label>
            <input type="text" name="email" class="form-control" id="email">

            <label for="streetAddress"><b>Street Address</b></label>
            <input type="text" name="streetAddress" class="form-control" id="streetAddress">

            <label for="streetAddressL2"><b>Street Address Line 2</b></label>
            <input type="text" name="streetAddressL2" class="form-control" id="streetAddressL2">

            <label for="city"><b>City</b></label>
            <input type="text" name="city" class="form-control" id="city">

            <label for="state"><b>State</b></label>
            <input type="text" name="state" class="form-control" id="state">

            <label for="zipCode"><b>Zip Code</b></label>
            <input type="text" name="zipCode" class="form-control" id="zipCode">
            <hr>
            <button type="submit" class="registerbtn">Create
              Customer</button>
          </section>
      </form>
      <form id="searchCustomer" action="/search" method="POST">
        <section id="existingCustomerForm">
          <br>
          <label for="firstName"><b>First Name|| Last Name || Address || Phone Number</b></label>
          <input type="text" name="existingCustomer" id="existingCustomer">
          {{!-- <label for="lastName"><b>Last Name</b></label>
          <input type="text" name="existingLastName" id="existingLastName">

          <label for="streetAddress"><b>Street Address</b></label>
          <input type="text" name="existingStreetAddress" id="existingStreetAddress"> --}}
          <a><button type="submit" class="registerbtn">Search Customer</button></a>
        </section>
    </div>
    </form>
  </div>
</div>

<section id="searchResults">
  <h2>Search Results</h2>
  <hr>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Phone Number</th>
        <th>Address</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="tableCol" style="vertical-align: middle;"><a style="text-decoration: none">
          </a></td>
        <td class="tableCol" style="vertical-align: middle;"></td>
        <td class="tableCol" style="text-align:right;">
          <a class="btn" href="/jobs/{{id}}">View Jobs</a>
          <a class="btn" href="/job-form">Add Job</a>
          <a id="profileBtn" class="btn" href="/profile/{{id}}">View Profile</a>
          <a class="btn" href="/job">Delete</a>
        </td>
      </tr>
      {{#each customers}}
      <tr>
        <td>{{firstName}} {{lastName}}</td>
        <td>{{phoneNumber}}</td>
        <td>{{streetAddress}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</section>
</div>

